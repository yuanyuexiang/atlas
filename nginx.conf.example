# Nginx 反向代理配置示例
# 用于 Atlas 智能客服后端 (ROOT_PATH="/atlas")

server {
    listen 80;
    server_name atlas.matrix-net.tech;

    # 可选: 重定向到 HTTPS
    # return 301 https://$server_name$request_uri;

    # 代理 /atlas 路径到后端应用
    location /atlas/ {
        # 后端服务地址 (去掉尾部的 /atlas)
        proxy_pass http://localhost:8000/;
        
        # 请求头设置
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # 对于 SSE (Server-Sent Events) 流式响应
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3600s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 3600s;
        
        # WebSocket 支持 (如果需要)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # 可选: 健康检查端点
    location = /atlas/health {
        proxy_pass http://localhost:8000/health;
        access_log off;
    }

    # 日志配置
    access_log /var/log/nginx/atlas_access.log;
    error_log /var/log/nginx/atlas_error.log;
}

# HTTPS 配置示例 (推荐生产环境使用)
server {
    listen 443 ssl http2;
    server_name atlas.matrix-net.tech;

    # SSL 证书配置 (使用 Let's Encrypt 或其他证书)
    ssl_certificate /etc/nginx/ssl/atlas.matrix-net.tech.crt;
    ssl_certificate_key /etc/nginx/ssl/atlas.matrix-net.tech.key;
    
    # SSL 优化配置
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # 安全头
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # 代理配置 (同上)
    location /atlas/ {
        proxy_pass http://localhost:8000/;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # SSE 流式响应支持
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3600s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 3600s;
        
        # WebSocket 支持
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # 健康检查
    location = /atlas/health {
        proxy_pass http://localhost:8000/health;
        access_log off;
    }

    # 日志
    access_log /var/log/nginx/atlas_ssl_access.log;
    error_log /var/log/nginx/atlas_ssl_error.log;
}

# 多应用部署示例 (同一域名下部署多个应用)
server {
    listen 80;
    server_name multi-app.example.com;

    # Atlas 后端
    location /atlas/ {
        proxy_pass http://localhost:8000/;
        proxy_set_header Host $host;
        # ... 其他配置同上
    }

    # 前端应用
    location /frontend/ {
        proxy_pass http://localhost:3000/;
        proxy_set_header Host $host;
        # ... 前端配置
    }

    # 管理后台
    location /admin/ {
        proxy_pass http://localhost:9000/;
        proxy_set_header Host $host;
        # ... 管理后台配置
    }
}

# 负载均衡配置示例 (多个后端实例)
upstream atlas_backend {
    least_conn;  # 最少连接负载均衡算法
    
    server localhost:8001 weight=1 max_fails=3 fail_timeout=30s;
    server localhost:8002 weight=1 max_fails=3 fail_timeout=30s;
    server localhost:8003 weight=1 max_fails=3 fail_timeout=30s;
    
    # 可选: 健康检查
    # server localhost:8001 max_fails=3 fail_timeout=30s;
}

server {
    listen 80;
    server_name atlas-ha.example.com;

    location /atlas/ {
        proxy_pass http://atlas_backend/;
        
        # 请求头和其他配置同上
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # SSE 流式响应
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 3600s;
    }
}
